---
layout: default
---

{% if page.image %}
<div
  class="banner"
  style="background-image: url('{{ page.image | relative_url }}')"
>
  {% if page.imageCredits %}
  <span class="banner-credits">{{ page.imageCredits }}</span>
  {% endif %}
</div>
{% endif %}

<main class="main container">
  <section class="post">
    <header class="post-header">
      <time class="post-time">{{ page.date | date_to_long_string }}</time> by
      <a href="/" title="" Davide Fantuzzi>utnaf</a>
    </header>
    <h1>{{ page.title }}</h1>
    {{ content }}
  </section>
</main>
